<%= form_for @painting do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :nationality %>
<%= f.text_field :nationality %>
<br>
<%= f.label :dob %>
<%= f.text_field :dob %>
<br>
<%= f.label :period %>
<%= f.text_field :period %>
<br>
<%= f.label :image %>
<%= f.text_field :image %>
<br>
<%= f.submit %>
<%= f.label :artist_id %>
<%= f.select :artist_id, Artist.all.map{|artist| [artist.name, artist.id]} %>
<% end %>




